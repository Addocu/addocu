# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript and Google Apps Script files
[*.{js,gs}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Configuration files
[{package.json,.travis.yml}]
indent_size = 2

# Google Apps Script specific
[appsscript.json]
indent_size = 2
