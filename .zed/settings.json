{
  "base_keymap": "VSCode",
  "tab_size": 2,
  "hard_tabs": false,
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "enable_language_server": true,
  "ui_font_size": 13,
  "buffer_font_size": 14,
  "buffer_font_family": "Cascadia Code NF",
  "project_panel": {
    "dock": "left"
  },
  "terminal": {
    "shell": {
      "program": "C:\\Program Files\\Git\\bin\\bash.exe"
    },
    "dock": "bottom",
    "button": true,
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "cursor_shape": "block",
    "alternate_scroll": "off",
    "option_as_meta": false,
    "copy_on_select": false,
    "env": {
      "TERM": "xterm-256color"
    },
    "line_height": "comfortable",
    "font_size": 15,
    "font_family": "Cascadia Code NF",
    "max_scroll_history_lines": 10000,
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        "activate_script": "default"
      }
    }
  },
  "languages": {
    "JavaScript": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.organizeImports"
        },
        {
          "external": {
            "command": "ruff",
            "arguments": [
              "format",
              "-"
            ]
          }
        }
      ],
      "language_servers": [
        "basedpyright",
        "..."
      ]
    },
    "JSON": {
      "tab_size": 2
    }
  },
  "file_finder": {
    "file_icons": true,
    "git_status": true
  },
  "scrollbar": {
    "show": "auto",
    "git_diff": true
  }
}
